{
  "extends": "@vue/tsconfig/tsconfig.json",
  "compilerOptions": {
    "ignoreDeprecations": "5.0",
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@hs/*": ["src/package_hs/*"],
      "@nzgx/*": ["src/package_nzgx/*"],
    },
    "lib": ["esnext", "dom"],
    "types": ["@dcloudio/types","@uni-helper/uni-ui-types","@uni-helper/uni-app-types"]
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"]
}
